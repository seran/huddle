<div class="relative overflow-x-auto py-4">
  <h1 class="text-lg text-gray-800">Boards</h1>
</div>

<div class="grid grid-cols-4 gap-4">

    	<% @boards.each do |board| %>
            <div class="flex">
       	    <%= link_to board_list_path(board.id), class: "block w-full p-6 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700" do %>
       	        <h5 class="mb-2 text-2xl font-medium tracking-tight text-gray-900 dark:text-white"><%= board.name %></h5>
      		<% end %>
            </div>
    	<% end %>

</div>
