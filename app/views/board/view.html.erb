<div class="relative overflow-x-auto py-4">
  <h1 class="text-lg text-gray-800">Board: <%= @board.name %></h1>
</div>


<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left rtl:text-right text-gray-700 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          Title
        </th>
        <th scope="col" class="px-6 py-3">
          State
        </th>
      </tr>
    </thead>
    <tbody>
     <% @board.tasks.each do |t| %>
     <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200">
      <td class="px-6 py-4"><%= link_to task_view_path(t.id) do %><%= t.title %><% end %></td>
      <td class="px-6 py-4"><%= link_to task_view_path(t.id) do %><%= t.state.capitalize %><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>